{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Device Toggle",
    "description": "Simple toggle device switch between Desktop and Mobile (375x812)",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "debugger",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}